<title>{% if entry.metaTitle|default %}{{ entry.metaTitle }}{% else %}{{ entry.title }}{% endif %}</title>

{%- if entry.metaDescription|default %}
	<meta name="description" content="{{ entry.metaDescription }}">
{% endif %}

{%- if entry.noIndex|default %}
	 <meta name="robots" content="noindex, follow">
{% endif %}

<link rel="canonical" href="{{ entry.url|default(craft.request.url) }}">

{% if settings.googleId|default %}
	<link rel="publisher" href="https://plus.google.com/{{ settings.googleId }}">
{% endif %}