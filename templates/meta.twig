{# TODO: Add optional Suffix for titles #}
<title>{% if entry.metaTitle|default %}{{ entry.metaTitle }}{% else %}{{ entry.title }}{% endif %}</title>

{% if entry.metaDescription|default %}
	<meta name="description" content="{{ entry.metaDescription }}">
{% endif %}

{%- if entry.noIndex|default %}
	 <meta name="robots" content="noindex, follow">
{% endif -%}

<link rel="canonical" href="{{ entry.url|default(craft.request.url) }}">

{%- if settings.googleId|default %}
	<link rel="publisher" href="https://plus.google.com/{{ settings.googleId }}">
{% endif %}

<meta property="og:type" content="{% if entry.ogType.value|default %}{{ entry.ogType.value }}{% else %}website{% endif %}">
<meta property="og:site_name" content="{{ siteName }}">
<meta property="og:url" content="{{ entry.url|default(craft.request.url) }}" itemprop="url">
<meta property="og:title" content="{% if entry.ogTitle|default %}{{ entry.ogTitle }}{% elseif entry.metaTitle|default %}{{ entry.metaTitle }}{% else %}{{ entry.title }}{% endif %}" itemprop="name">
{% if entry.ogDescription|default or entry.metaDescription|default -%}
	<meta property="og:description" content="{% if entry.ogDescription|default %}{{ entry.ogDescription }}{% elseif entry.metaDescription %}{{ entry.metaDescription }}{% endif %}" itemprop="description">
{% endif %}

{%- if entry.ogType.value|default and entry.ogType.value == 'article' -%}
	<meta property="article:published_time" content="{{ entry.dateCreated.iso8601 }}" itemprop="datePublished">
	<meta property="article:modified_time" content="{{ entry.dateUpdated.iso8601 }}" itemprop="dateModified">
{%- endif -%}

{% if entry.ogImage|default -%}
	<meta property="og:image" content="{{ entry.ogImage.first.getUrl('ogImageTransform') }}" itemprop="image">
{% elseif settings.socialImage|default|length %}
	<meta property="og:image" content="{{ craft.assets.id(settings.socialImage[0]).first.geturl('ogImageTransform') }}" itemprop="image">
{% endif %}

{% if settings.twitterHandle|default %}
	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@{{ settings.twitterHandle }}">
{% endif %}